<%- include("./parts/navbar.ejs" , {title : `Withdraw ${locals.cur_type}`,showScroller:false,
isLoggedIn : locals.isLoggedIn ? isLoggedIn : false , isAdmin: locals.isAdmin?
isAdmin : false
,stylesheets:['/css/simplebar.css','https://cdn.cryptofonts.com/1.3.5/cryptofont.css','/css/spinner.css','/css/specific_withdraw.css']})
%>

<% if (locals.cur_type && locals.networks && locals.wallet) { %>

<div class="main-container">

  <div class="head-div">
    <button class="back-btn">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </button>
    <h2 id="page-title" class="page-title">Withdraw</h2>
    <button class="history-btn" title="withdraw history">
      <i class="fas fa-history"></i>
    </button>
  </div>

    
  <div class="wallet_container">
    <div class="cur_data">

      <% switch (wallet.currency) { case 'USDT': %>

      <img src="/usdt.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'USDC': %>
      <img src="/usdc.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'XRP': %>
      <img src="/xrp.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'LTC': %>
      <img src="/ltc.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'SOL': %>
      <img src="/sol.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'BTC': %>
      <img src="/btc.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'TRX': %>
      <img src="/trx.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'DOGE': %>
      <img src="/doge.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'ETH': %>
      <img src="/eth.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; case 'BNB': %>
      <img src="/bnb.svg" />
      <span class="cur_type"><%= wallet.currency %></span>

      <% break; default: %>
      <img src="/usdt.svg" />
      <span class="cur_type">USDT</span>
      <% break; } %>

    </div>
    <div class="amount_div">
      <span>Available</span><span class="cur_amount"> <%= wallet.available %> </span>
    </div>
  </div>

  <div class="withdraw_form">
    <!--  BEGIN recipient_address -->
    <div class="recipient_address_wrap">
      <label>recipient address</label>
      <input type="text" name="recipient_address" placeholder="Enter recipient address" required spellcheck="false" maxlength="600" />
    </div>
    <!--  END recipient_address -->

    <!--  BEGIN amount -->
    <div class="amount_wrap">
      <label>Amount</label>
      <div class="am_wr">
        <input type="text" name="amount" placeholder="0.00" required spellcheck="false" maxlength="50" />
        <span class="symbol"><%= cur_type %></span>
        <span class="max">MAX</span>
      </div>
      <span>Available : <span><%= wallet.available %></span></span>
    </div>
    <!--  END amount -->

    <!--  BEGIN network_type -->
    <div class="network_type_wrap">
      <label>network type</label>
      <div class="network_dropdown">
        <div class="network_dropdown_btn">
          <div class="upper">
            <span class="network_name">Select Network</span>
            <i class="fas fa-chevron-down"></i>
          </div>
          <div class="network_data">
            <span class="fee"><span class="pre_span">Fee : </span>0.00<span class="post_span"> <%= cur_type %></span></span>
            <span class="minimum_withdrawal"><span class="pre_span">Min. Withdrawal : </span>0.00<span class="post_span"> <%= cur_type %></span></span>
            <span class="arrival_time"><span class="pre_span">Arrival Time : </span>0<span class="post_span"> mins</span></span>
          </div>
        </div>
        <ul class="options">
          <% networks.forEach(network => { %>
          <li class="option">
            <span class="network_name"><%= network.name %></span>
            <div class="network_data">
              <span class="fee"><span class="pre_span">Fee : </span><%= network.fee %><span class="post_span"> <%= cur_type %></span></span>
              <span class="minimum_withdrawal"><span class="pre_span">Min. Withdrawal : </span><%= network.minimum_withdrawal %><span class="post_span"> <%= cur_type %></span></span>
              <% if (network.arrival_time != null) { %>
              <span class="arrival_time"><span class="pre_span">Arrival Time : </span><%= network.arrival_time %><span class="post_span"> mins</span></span>
              <% } %>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
    <!--  END network_type -->

    <!--  BEGIN key -->
    <div class="key_wrap">
      <label>secret key</label>
      <input type="text" name="key" placeholder="Enter your secret key" required spellcheck="false" maxlength="100" />
    </div>
    <!--  END key -->

    <button id="withdraw_btn">WITHDRAW</button>

  </div>
</div>

<% } else {%>

<div class="no_wallets"><%= locals.cur_type %></div>

<% } %>

<%- include("./parts/footer.ejs" ,
{showScroller:false, scripts: ['/js/simplebar.min.js'] ,moduleScripts: ['/js/specific_withdraw.js'] })%>