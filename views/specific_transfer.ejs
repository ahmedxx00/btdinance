<%- include("./parts/navbar.ejs" , {title : `${tit} ${locals.cur_type}`,showScroller:false, isLoggedIn : locals.isLoggedIn ?isLoggedIn : false , isAdmin: locals.isAdmin? isAdmin : false
,na:na,nex:nex,ntr:ntr,nwith:nwith,ndep:ndep,nhm:nhm,lgt:lgt,stylesheets:['/css/simplebar.css','/css/specific_transfer.css']})%>

<% if (locals.cur_type && locals.curImg && locals.wallet) { %>

<div class="main-container">
  <div class="head-div">
    <button class="back-btn">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </button>
    <h2 id="page-title" class="page-title"><%= tit %></h2>
    <button class="history-btn" title="withdraw history">
      <i class="fas fa-history"></i>
    </button>
  </div>

  <div class="wallet_container">
    <div class="cur_data">
      <img src="<%= curImg %>" />
      <span class="cur_type"><%= wallet.currency %></span>
    </div>
    <div class="amount_div">
      <span><%= av %></span><span class="cur_amount"> <%= wallet.available %> </span>
    </div>
  </div>

  <div class="tabs_box">
    <button class="tab_btn active"><%= nm %></button>
    <button class="tab_btn"><%= em %></button>
  </div>

  <div class="content_box">
    <div class="content Name active">
      <!--  BEGIN name -->
      <div class="name">
        <label><%= nm_nt %></label>
        <input type="text" name="name" placeholder="<%= nm_plc %>" required spellcheck="false" maxlength="600" />
      </div>
      <!--  END name -->
      <!--  BEGIN amount -->
      <div class="amount_wrap">
        <label><%= am_tit %></label>
        <div class="am_wr">
          <input type="text" name="amount" placeholder="0.00" required spellcheck="false" maxlength="50" />
          <span class="symbol"><%= cur_type %></span>
          <span class="max">MAX</span>
        </div>
        <span><%= av %><span><%= wallet.available %></span></span>
      </div>
      <!--  END amount -->
      <button class="transfer_btn"><%= btn %></button>
    </div>
    <div class="content Email">

      <!--  BEGIN email -->
      <div class="email">
        <label><%= em_nt %></label>
        <input type="text" name="email" placeholder="<%= em_plc %>" required spellcheck="false" maxlength="600" />
      </div>
      <!--  END email -->
      <!--  BEGIN amount -->
      <div class="amount_wrap">
        <label><%= am_tit %></label>
        <div class="am_wr">
          <input type="text" name="amount" placeholder="0.00" required spellcheck="false" maxlength="50" />
          <span class="symbol"><%= cur_type %></span>
          <span class="max">MAX</span>
        </div>
        <span><%= av %><span><%= wallet.available %></span></span>
      </div>
      <!--  END amount -->
      <button class="transfer_btn"><%= btn %></button>
    </div>
  </div>
</div>

<% } else {%>

<div class="no_wallets"><%= locals.cur_type %></div>

<% } %>

<%- include("./parts/footer.ejs" ,
 {showScroller:false, scripts:['/js/simplebar.min.js'] ,moduleScripts:['/js/specific_transfer.js'] })%>