<%- include("./parts/navbar.ejs" , {title : `Transfer ${locals.cur_type}`,showScroller:false, isLoggedIn : locals.isLoggedIn ?isLoggedIn : false , isAdmin: locals.isAdmin? isAdmin : false
,stylesheets:['/css/simplebar.css','https://cdn.cryptofonts.com/1.3.5/cryptofont.css','/css/spinner.css','/css/specific_transfer.css']})%>

<% if (locals.cur_type && locals.curImg && locals.wallet) { %>

<div class="main-container">
  <div class="head-div">
    <button class="back-btn">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </button>
    <h2 id="page-title" class="page-title">Transfer</h2>
    <button class="history-btn" title="withdraw history">
      <i class="fas fa-history"></i>
    </button>
  </div>

  <div class="wallet_container">
    <div class="cur_data">
      <img src="<%= curImg %>" />
      <span class="cur_type"><%= wallet.currency %></span>
    </div>
    <div class="amount_div">
      <span>Available : </span><span class="cur_amount"> <%= wallet.available %> </span>
    </div>
  </div>

  <div class="tabs_box">
    <button class="tab_btn active">Name</button>
    <button class="tab_btn">Email</button>
  </div>

  <div class="content_box">
    <div class="content Name active">
      <!--  BEGIN name -->
      <div class="name">
        <label>Name of ~ BTC Dinance ~ user</label>
        <input type="text" name="name" placeholder="Enter Name" required spellcheck="false" maxlength="600" />
      </div>
      <!--  END name -->
      <!--  BEGIN amount -->
      <div class="amount_wrap">
        <label>Amount</label>
        <div class="am_wr">
          <input type="text" name="amount" placeholder="0.00" required spellcheck="false" maxlength="50" />
          <span class="symbol"><%= cur_type %></span>
          <span class="max">MAX</span>
        </div>
        <span>Available : <span><%= wallet.available %></span></span>
      </div>
      <!--  END amount -->
      <button class="transfer_btn">TRANSFER</button>
    </div>
    <div class="content Email">

      <!--  BEGIN email -->
      <div class="email">
        <label>Email of ~ BTC Dinance ~ user ( must has @ sign )</label>
        <input type="text" name="email" placeholder="Enter Email" required spellcheck="false" maxlength="600" />
      </div>
      <!--  END email -->
      <!--  BEGIN amount -->
      <div class="amount_wrap">
        <label>Amount</label>
        <div class="am_wr">
          <input type="text" name="amount" placeholder="0.00" required spellcheck="false" maxlength="50" />
          <span class="symbol"><%= cur_type %></span>
          <span class="max">MAX</span>
        </div>
        <span>Available : <span><%= wallet.available %></span></span>
      </div>
      <!--  END amount -->
      <button class="transfer_btn">TRANSFER</button>
    </div>
  </div>
</div>

<% } else {%>

<div class="no_wallets"><%= locals.cur_type %></div>

<% } %>

<%- include("./parts/footer.ejs" ,
 {showScroller:false, scripts:['/js/simplebar.min.js'] ,moduleScripts:['/js/specific_transfer.js'] })%>